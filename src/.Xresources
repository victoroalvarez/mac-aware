! This file can be placed within the $HOME directory,
! or at ~/.config/X11/.Xresources
! Contains configuration for all applications which are clients of X

Xft.autohint: 0
Xft.lcdfilter:  lcddefault
Xft.hintstyle:  hintfull
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb
!Xft.dpi: 120
Xft.dpi: 100
!Xcursor.size: 32
Xcursor.size: 12

*.foreground: #C6C6C6
*.background: #1C1C1C
*.cursorColor: #444444
! black 236 238
*.color0: #303030
*.color8: #444444
! red 167
*.color1: #d75f5f
*.color9: #d75f5f
! green 108
*.color2: #87AF87
*.color10: #87AF87
! yellow 221
*.color3: #ffd75f
*.color11: #ffd75f
! blue 110
*.color4: #87afd7
*.color12: #87afd7
! magenta 146
*.color5: #afafd7
*.color13: #afafd7
! cyan 75
*.color6: #afd7ff
*.color14: #afd7ff
! white 239 15
*.color7: #e4e4e4
*.color15: #ffffff
URxvt*font: xft:DejaVuSansMono:size=14:antialias=true
URxvt*borderLess: false
URxvt*externalBorder: 0
URxvt*internalBorder: 4
URxvt*scrollBar: false
URxvt*saveLines: 5000
